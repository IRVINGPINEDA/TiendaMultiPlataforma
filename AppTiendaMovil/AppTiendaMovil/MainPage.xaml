<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTiendaMovil.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Top bar with app title and new product button -->
            <Grid ColumnDefinitions="*,Auto">
                <Label Text="ProductHub Admin" FontSize="18" VerticalOptions="Center" />
                <Button Text="Nuevo producto" Grid.Column="1" BackgroundColor="#198754" TextColor="White" Clicked="OnNewProductClicked" />
            </Grid>

            <Label Text="Productos" FontSize="28" FontAttributes="Bold" />

            <!-- Search area -->
            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                <Entry x:Name="SearchEntry" Placeholder="Buscar por nombre o marca" Grid.Column="0" />
                <HorizontalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="6">
                    <CheckBox x:Name="IncludeInactiveCheck" />
                    <Label Text="Incluir inactivos" VerticalOptions="Center" />
                </HorizontalStackLayout>
                <Button Text="Buscar" Grid.Column="2" Clicked="OnSearchClicked" />
            </Grid>

            <!-- Header row -->
            <Grid ColumnDefinitions="80,*,100,90,80,90,160" BackgroundColor="#f1f3f5" Padding="10">
                <Label Text="Imagen" FontAttributes="Bold" />
                <Label Text="Nombre" FontAttributes="Bold" Grid.Column="1" />
                <Label Text="Marca" FontAttributes="Bold" Grid.Column="2" />
                <Label Text="Precio" FontAttributes="Bold" Grid.Column="3" />
                <Label Text="Stock" FontAttributes="Bold" Grid.Column="4" />
                <Label Text="Estado" FontAttributes="Bold" Grid.Column="5" />
                <Label Text="Acciones" FontAttributes="Bold" Grid.Column="6" HorizontalOptions="End" />
            </Grid>

            <!-- List of products -->
            <CollectionView ItemsSource="{Binding Products}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="80,*,100,90,80,90,160" Padding="10" BackgroundColor="White">
                            <Image Source="{Binding Image}" Aspect="AspectFill" HeightRequest="60" WidthRequest="60" Grid.Column="0" />
                            <Label Text="{Binding Name}" Grid.Column="1" VerticalOptions="Center" />
                            <Label Text="{Binding Brand}" Grid.Column="2" VerticalOptions="Center" />
                            <Label Text="{Binding Price, StringFormat='${0:N2}'}" Grid.Column="3" VerticalOptions="Center" />
                            <Label Text="{Binding Stock}" Grid.Column="4" VerticalOptions="Center" HorizontalOptions="Center" />
                            <Frame Grid.Column="5" Padding="6" CornerRadius="12" BackgroundColor="{Binding StatusColor}" VerticalOptions="Center" HorizontalOptions="Center">
                                <Label Text="{Binding StatusText}" TextColor="White" FontSize="12" HorizontalOptions="Center" />
                            </Frame>
                            <HorizontalStackLayout Grid.Column="6" HorizontalOptions="End" Spacing="6">
                                <Button Text="Editar" BackgroundColor="#0d6efd" TextColor="White" Clicked="OnEditClicked" />
                                <Button Text="Imagen" BackgroundColor="#0dcaf0" TextColor="Black" Clicked="OnImageClicked" />
                                <Button Text="Eliminar" BackgroundColor="#dc3545" TextColor="White" Clicked="OnDeleteClicked" />
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
