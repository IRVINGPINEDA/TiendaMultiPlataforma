@page "{id:guid}"
@model ProductHub.Web.Pages.Products.EditModel
@{
    ViewData["Title"] = "Editar producto";
}

<h1 class="h3 mb-3">Editar producto</h1>

<form method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="Input.Nombre" class="form-label"></label>
        <input asp-for="Input.Nombre" class="form-control" />
        <span asp-validation-for="Input.Nombre" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.Marca" class="form-label"></label>
        <input asp-for="Input.Marca" class="form-control" />
        <span asp-validation-for="Input.Marca" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Input.Precio" class="form-label"></label>
        <input asp-for="Input.Precio" class="form-control" />
        <span asp-validation-for="Input.Precio" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Input.CantidadStock" class="form-label"></label>
        <input asp-for="Input.CantidadStock" class="form-control" />
        <span asp-validation-for="Input.CantidadStock" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Input.Descripcion" class="form-label"></label>
        <textarea asp-for="Input.Descripcion" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Input.Descripcion" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-page="Index" class="btn btn-secondary">Volver</a>
        <a asp-page="Image" asp-route-id="@Model.Id" class="btn btn-outline-info">Gestionar imagen</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
