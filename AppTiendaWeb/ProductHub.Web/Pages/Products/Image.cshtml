@page "{id:guid}"
@model ProductHub.Web.Pages.Products.ImageModel
@{
    ViewData["Title"] = "Imagen de producto";
}

<h1 class="h3 mb-3">Imagen del producto</h1>

@if (Model.Product is null)
{
    <div class="alert alert-warning">Producto no encontrado.</div>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <h2 class="h5">@Model.Product.Nombre (@Model.Product.Marca)</h2>
            @if (!string.IsNullOrWhiteSpace(Model.Product.ImageUrl))
            {
                <img src="@Model.Product.ImageUrl" alt="@Model.Product.Nombre" class="img-thumbnail" style="max-width:220px;" />
            }
            else
            {
                <p class="text-muted mb-0">Este producto aún no tiene imagen.</p>
            }
        </div>
    </div>

    <form method="post" enctype="multipart/form-data" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12">
            <label asp-for="UploadFile" class="form-label">Seleccionar imagen (jpg/png/webp, máx. 5MB)</label>
            <input asp-for="UploadFile" type="file" accept=".jpg,.jpeg,.png,.webp" class="form-control" />
            <span asp-validation-for="UploadFile" class="text-danger"></span>
        </div>
        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Subir imagen</button>
            <a asp-page="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Volver</a>
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

