@page
@model ProductHub.Web.Pages.Store.IndexModel
@{
    ViewData["Title"] = "Tienda";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Tienda</h1>
    <a class="btn btn-outline-secondary" asp-page="/Orders/Index">Ver compras</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="get" class="row g-2 mb-4">
    <div class="col-md-8">
        <input class="form-control" asp-for="Search" placeholder="Buscar por nombre o marca" />
    </div>
    <div class="col-md-4 d-grid">
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<div class="row g-4">
    <div class="col-lg-7">
        <h2 class="h5">Productos disponibles</h2>

        @if (!Model.Products.Any())
        {
            <div class="alert alert-info">No hay productos disponibles con ese filtro.</div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 g-3">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="card h-100">
                            @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Nombre" style="height:220px;object-fit:cover;" />
                            }
                            <div class="card-body">
                                <h3 class="h6 card-title">@product.Nombre</h3>
                                <p class="mb-1 text-muted">@product.Marca</p>
                                <p class="fw-bold mb-2">@product.Precio.ToString("C")</p>
                                <p class="mb-3">Stock disponible: <strong>@product.CantidadStock</strong></p>

                                <form method="post" asp-page-handler="Add" class="row g-2">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="search" value="@Model.Search" />
                                    <div class="col-5">
                                        <input type="number" min="1" max="@product.CantidadStock" name="quantity" value="1" class="form-control" />
                                    </div>
                                    <div class="col-7 d-grid">
                                        <button type="submit" class="btn btn-success">Agregar al carrito</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="col-lg-5">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h5 mb-0">Carrito</h2>
                    @if (Model.Cart.Any())
                    {
                        <form method="post" asp-page-handler="ClearCart">
                            <input type="hidden" name="search" value="@Model.Search" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Vaciar</button>
                        </form>
                    }
                </div>

                @if (!Model.Cart.Any())
                {
                    <p class="text-muted mb-0">Aun no agregas productos.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cant.</th>
                                    <th class="text-end">Subtotal</th>
                                    <th class="text-end">Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Cart)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td style="min-width:130px;">
                                        <form method="post" asp-page-handler="Update" class="d-flex gap-1">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <input type="hidden" name="search" value="@Model.Search" />
                                            <input type="number" name="quantity" min="0" max="@item.StockDisponible" value="@item.Quantity" class="form-control form-control-sm" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">OK</button>
                                        </form>
                                    </td>
                                    <td class="text-end">@item.LineTotal.ToString("C")</td>
                                    <td class="text-end">
                                        <form method="post" asp-page-handler="Remove">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <input type="hidden" name="search" value="@Model.Search" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Quitar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Total</th>
                                    <th>@Model.CartItemsCount</th>
                                    <th class="text-end">@Model.CartTotal.ToString("C")</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h2 class="h5">Finalizar compra</h2>
                <form method="post" asp-page-handler="Checkout">
                    <input type="hidden" name="search" value="@Model.Search" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                    <div class="mb-2">
                        <label asp-for="Checkout.ClienteNombre" class="form-label"></label>
                        <input asp-for="Checkout.ClienteNombre" class="form-control" />
                        <span asp-validation-for="Checkout.ClienteNombre" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="Checkout.ClienteTelefono" class="form-label"></label>
                        <input asp-for="Checkout.ClienteTelefono" class="form-control" />
                        <span asp-validation-for="Checkout.ClienteTelefono" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="Checkout.DireccionEntrega" class="form-label"></label>
                        <input asp-for="Checkout.DireccionEntrega" class="form-control" />
                        <span asp-validation-for="Checkout.DireccionEntrega" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Checkout.Notas" class="form-label"></label>
                        <textarea asp-for="Checkout.Notas" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Checkout.Notas" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success" @(Model.Cart.Any() ? null : "disabled")>
                            Comprar ahora
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
